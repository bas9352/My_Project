<UserControl x:Class="ICMS_Server.CouponReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICMS_Server"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="14"
             TextOptions.TextFormattingMode="Ideal" 
             TextOptions.TextRenderingMode="Auto">
    <Grid>
        <GroupBox Margin="25"
                  Header="{lex:Loc Key=coupon_report}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Margin="25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,5,0">
                        <ComboBox x:Name="item_staff" 
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                  VerticalAlignment="Stretch" 
                                  ItemsSource="{Binding group_item}" 
                                  Width="auto"
                                  Height="40"
                                  materialDesign:HintAssist.Hint="{lex:Loc Key=create_by}"
                                  IsEnabled="{Binding group}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Loaded">
                                    <i:InvokeCommandAction Command="{Binding item_staff}"
                                               CommandParameter="{Binding ElementName=item_staff}"/>
                                </i:EventTrigger>
                                <i:EventTrigger  EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding item_staff_changed}"
                                               CommandParameter="{Binding ElementName=item_staff}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,5,0">
                        <DatePicker Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                    VerticalAlignment="Stretch"
                                        Language="th-TH"
                                    Text="{Binding txt_s_create_date, Mode=TwoWay}"
                                    materialDesign:HintAssist.Hint="{lex:Loc Key=s_create_date}"
                                    Width="auto"
                                    Height="auto">
                        </DatePicker>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <DatePicker Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                    VerticalAlignment="Stretch"
                                        Language="th-TH"
                                    Text="{Binding txt_e_create_date, Mode=TwoWay}"
                                    materialDesign:HintAssist.Hint="{lex:Loc Key=e_create_date}"
                                    Width="auto"
                                    Height="auto">
                        </DatePicker>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,25">
                    <Button Style="{StaticResource MaterialDesignRaisedLightButton}"
                        Padding="8"
                        Width="150"
                        Height="35"
                        Command="{Binding btn_open_report}"
                        ToolTip="{lex:Loc Key=open_report}"
                        Content="{lex:Loc Key=open_report}">
                    </Button>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
